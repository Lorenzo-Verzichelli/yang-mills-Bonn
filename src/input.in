size 4 4 4 4 

beta 5.705

sample    10
thermal   0
overrelax 5 
measevery 1

start                   0  # 0=ordered  1=random  2=from saved configuration
saveconf_back_every     5  # if 0 does not save, else save backup configurations every ... updates
saveconf_analysis_every 5  # if 0 does not save, else save configurations for analysis every ... updates

#for cooling measures
coolsteps  3     # number of cooling steps to be used
coolrepeat 5     # number of times "coolsteps" are repeated

#for gradient flow evolution
gfstep   0.01    # integration step for gradient flow

#for multilevel
multihit         10  # number of multihit step
ml_step          2   # timeslices for multilevel (from largest to smallest)
ml_upd           10  # number of updates for various levels
ml_level0_repeat 1   # number of times level0 is repeated in long sim.
dist_poly        2   # distance between the polyakov loop 
transv_dist      2   # transverse distance from the polyakov correlator

#output files
conf_file  conf.dat
data_file  dati.dat
log_file   log.dat
ml_file    ml.dat

randseed 0    #(0=time)
